{
  "compilerOptions": {
    "module": "Node16", // Changed from commonjs to Node16
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false, // Temporarily set to false to bypass 'tx' type error, will fix properly later
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node16"
  }
}

